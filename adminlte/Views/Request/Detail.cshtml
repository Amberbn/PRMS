@model adminlte.Models.Request_Ticket

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Request Ticket Detail</h2>
<style>
    #Reason {
        margin: 0px;
        width: 525px;
        height: 80px;
    }
</style>
@using (Html.BeginForm("Detail","Request",FormMethod.Post,new { @id = "Form", @name = "Form"}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-md-10">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TaskId)
        @Html.HiddenFor(model => model.Mst_User.UserId)
        @Html.HiddenFor(model => model.RequestType)

        <div class="form-group">
            @Html.LabelFor(model => model.Mst_User.FullName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Mst_User.FullName, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                @Html.ValidationMessageFor(model => model.Mst_User.FullName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Mst_User.Mst_Role.RoleName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Mst_User.Mst_Role.RoleName, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                @Html.ValidationMessageFor(model => model.Mst_User.Mst_Role.RoleName, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", disabled = true } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RequestType, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.RequestType, new { htmlAttributes = new { @class = "form-control",disabled=true } })
                @Html.ValidationMessageFor(model => model.RequestType, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Reason, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.TextAreaFor(model => model.Reason, new { htmlAttributes = new { @class = "form-group form-control col-md-5", @rows="4" }, disabled = true })
                @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
           <label class="control-label col-md-2">Komentar</label>
            <div class="col-md-7">
               <textarea name="komentar" id="komentar" class="form-control" rows="4"></textarea>
            </div>
        </div>

        <input type="hidden" value="" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="aksi" value="Approve" class="btn btn-primary" />
                <input type="submit" name="aksi" value="Reject" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<script>
    $("Form").validate({
        rules: {
            komentar: {
                required: true,
                maxlength: 255
            }
        }
    });
</script>
